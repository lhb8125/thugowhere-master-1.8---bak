.dish_detail_image {
  width: 250rpx;
  height: 250rpx;
  /* z-index: 1000; */
  margin-right: 40rpx;
  margin-left: 40rpx;
}

.blur {
  filter: blur(30px);
  -webkit-filter: blur(20px);
  background-repeat: repeat;
  background-size: 100% 100%;
  width: 750rpx;
  height: 300rpx;
  top: 0;
  left: 0;
  overflow: hidden;
  position: absolute;
  align-self: center;
  /* z-index: 0; */
}

.background{
  background-color: lightyellow;
  width: 680rpx;
  height: auto;
  /* position: absolute; */
  /* top: 20rpx; */
  /* left: 20rpx; */
  border-radius: 20rpx;
  margin: 30rpx;
  margin-top: 0rpx;
   padding: 15rpx; 
   display: flex;
   justify-content: flex-start;
   align-items: center;
}

.upvoteCount{
  font-size: 28rpx;
  border-style: solid;
  border-width: thin;
  border-radius: 25rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
}

.dish_detail {
  /* z-index: 1000; */
  width: 750rpx;
  height: 300rpx;
  display: flex;
  top: 0;
  left: 0;
  position: absolute;
  margin: 20rpx;
  justify-content: flex-start;
  align-items: flex-start;
}

.dish_detail_text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 32rpx;
  font-family: sans-serif;
  color: black;
  /* z-index: 1000; *//* margin-right: 20rpx; *//* margin-left: 40rpx; */
}

.dish_detail_text_minor {
  font-size: 28rpx;
}

.dish_important_text {
  font-size: 30rpx;
  font-family: sans-serif;
  color: red;
  font-weight: bold;
  /* z-index: 1000; *//* margin-right: 20rpx; *//* margin-left: 40rpx; */
}

.dish_nutrition_text {
  font-size: 30rpx;
  font-family: sans-serif;
  color: black;
  /* font-weight: bold; *//* z-index: 1000; */
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.comment_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* align-items: flex-start; */
  padding-left: 10rpx;
  padding-top: 0rpx;
  margin-top: 0rpx;
  /* z-index: 0;  *//* padding-top: 10rpx; */
}

.comment_content {
  font-size: 28rpx;
  font-family: sans-serif;
  padding-top: 16rpx;
}

.comment_nickname {
  font-size: 24rpx;
  font-family: sans-serif;
  padding-top: 0rpx;
  margin-top: 0rpx;
}

.comment_gradeanddate {
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
  text-align: right;
}

.comment_btn {
  width: 100%;
  bottom: 0;
  /* bottom: 0; *//* z-index: 1000; */
  position: fixed;
  height: 80rpx;
  font-size: 35rpx;
}

.comment_hidden_btn {
  height: 8%;
  width: 100%;
  bottom: 0;
  top: 92%;
  /* z-index: 1000; */
  position: fixed;
}

.comment_write {
  color: black;
  font-weight: bold;
  font-size: 28rpx;
  padding-right: 30rpx;
  font-family: sans-serif;
  text-decoration-line: underline;
}

.comment_config {
  color: lightgrey;
  font-size: 26rpx;
  margin-right: 20rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  font-family: sans-serif;
  border-style: solid;
  border-width: thin;
  border-radius: 20rpx;
}

.oneMoreTime_box {
  width: 50%;
  height: 90rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background-color: whitesmoke;
  border-style: solid;
  border-width: 0.5rpx;
  border-bottom-style: none;
  border-left-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.favour_box {
  width: 50%;
  height: 90rpx;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  background-color: whitesmoke;
  border-style: solid;
  border-width: 0.5rpx;
  border-bottom-style: none;
  border-right-style: none;
  border-left-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.config_txt {
  font-size: 28rpx;
  margin: 15rpx;
  font-family: sans-serif;
}
