<view class="weui-panel weui-panel_access">
  <view class="weui-panel__hd">我的评论列表</view>
  <view class="weui-panel__bd">
    <view class="background">
      <view class="dish_name">麻辣香锅</view>
      <view class="dish_comment">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
      <view class="weui-flex" style='display:flex;justify-content:space-between;align-items:flex-end;margin-left:20rpx;margin-right:20rpx;'>
        <!-- <view wx:if="{{comments.isUserFavoured[index]}}"> -->
        <image id="{{index}}" style="width: 35rpx; height: 35rpx;margin-bottom:10rpx;" src="/images/favour_f.png" mode="widthFix" bindtap="changeFavoured"></image>
        <!-- </view> -->
        <!-- <view wx:else> -->
        <!-- <image id="{{index}}" style="width: 35rpx; height: 35rpx;" src="/images/favour_e.png" mode="widthFix" bindtap="changeFavoured"></image> -->
        <!-- </view> -->
        <view class="weui-cell__ft  comment_gradeanddate">{{commentDate}}</view>
      </view>

      <view class='favour_box'>
        <image id="{{index}}" style="width: 40rpx; height: 35rpx;margin:10rpx;" src="/images/head.jpg" mode="widthFix" bindtap="changeFavoured"></image>
      </view>
    </view>
    <view class="background">
      <view class="weui-media-box__title weui-media-box__title_in-text">标题二</view>
      <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
    </view>
  </view>
