/* pages/dishes/dishes.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  margin-top: 2px;
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 0px;
  text-align: left;
}

.button-sp-area {
  margin-top: 12px;
  margin-bottom: 8px;
  margin-right: 5px;
  padding-top: 0px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-end;
}

.mini-btn {
  margin-right: 2px;
}

.button-size {
  width: 120%;
  /* opacity: 0; *//* background-color: cyan;
  border: 1px solid #fff; */
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 10px 5px 10px 35px;
}

/* .weui-media-box__desc{
  font-size: 15px;
  margin-bottom: 10rpx;
} */

.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}

.drawer_screen {
  width: 60%;
  height: auto;
  position: fixed;
  top: 20%;
  left: 20%;
  z-index: 9999;
  background: #fafad2; 
  opacity: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
   justify-content: flex-start; 
  /* align-items: flex-start; */
}

/*content*/

.btn_ok {
  padding: 10px;
  font: 15px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

.detail_text{
  font: 12px "microsoft yahei";
  text-align: left;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
}

.detail_score{
  font-style: italic;
  font-family: 'Times New Roman', Times, serif;
  font-size: 25px;
  text-align: center;
  padding-right: 10px;
  /* padding-left: 10px; */
  /* padding-top: 10px; */
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.scrollToTop{
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  width: 70rpx;
  opacity: 0.6;
  z-index: 9999;
}