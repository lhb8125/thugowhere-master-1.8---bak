/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast_show {
	display: block;
}
.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast__bd {
	opacity: 0;
	/* display: flex; */
	/* flex-direction: column; */
	position: fixed;
    z-index: 5000;
    width: auto;
    height: auto;
    max-width: 70%;
    bottom:100rpx;
    left: 50%;
     padding: 10rpx; 
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
}
.wetoast__bd__img {
	margin-top: 3px;
}
.wetoast__bd__img_desc {
    width: 55px;
    height: 55px;
    vertical-align: middle;
}
.wetoast__bd__title {
	margin: 10rpx 10rpx;
	font-size: 28rpx;
}